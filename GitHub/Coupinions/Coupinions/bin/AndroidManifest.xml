<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coupinions"
    android:versionCode="1"
    android:versionName="1.0"
    android:background="@color/white" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/coupinions_logo"
        android:label="@string/app_name"
        android:theme="@style/ThemeSelector" >                
        <activity
            android:name="com.example.coupinions.MainMenuActivity"
            android:label="@string/app_name" >                   
        </activity>        
        <activity
            android:name="com.example.coupinions.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>     
        </activity>
        <activity
            android:name="com.example.coupinions.SignupActivity"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name="com.example.coupinions.ViewCouponsActivity"
            android:label="@string/title_activity_view_coupons" >
        </activity>
        <activity
            android:name="com.example.coupinions.UseCouponActivity"
            android:label="@string/title_activity_use_coupon" >
        </activity>
        <activity
            android:name="com.example.coupinions.QuestionActivity"
            android:label="@string/title_activity_question" >
        </activity>
        <activity
            android:name="com.example.coupinions.ResultsActivity"
            android:label="@string/title_activity_results" >
        </activity>
    </application>
            <uses-permission android:name="android.permission.INTERNET" /> 
